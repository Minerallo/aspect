# Nsinker benchmark using geometric multigrid preconditioner
# with global coarsening GMG
#
# MPI: 2

set Dimension = 3

include $ASPECT_SOURCE_DIR/benchmarks/nsinker/nsinker_gmg.prm


subsection Material model
  set Material averaging = harmonic average only viscosity
end

subsection Solver parameters
  subsection Stokes solver parameters
    set Stokes solver type = block GMG
    set Stokes GMG type = global coarsening
  end
end

subsection Mesh refinement
  set Initial adaptive refinement        = 1
  set Initial global refinement          = 2
end

subsection Postprocess
  set List of postprocessors =
end
